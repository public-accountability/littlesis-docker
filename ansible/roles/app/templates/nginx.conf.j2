user www-data;
worker_processes 3;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
    # multi_accept on;
}

http {
    ##
    # Basic Settings
    ##

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off;

    # server_names_hash_bucket_size 64;
    # server_name_in_redirect off;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings
    ##

    ssl_protocols TLSv1.2;
    ssl_ciphers {{ nginx_ssl_ciphers }};
    ssl_prefer_server_ciphers on;

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    
    ##
    # Logging Settings
    ##

    log_format littlesis '$remote_addr "$time_iso8601" $host "$request" $status $body_bytes_sent $request_time "$http_referer" "$http_user_agent"';

    access_log /var/log/nginx/access.log littlesis;
    error_log /var/log/nginx/error.log;


    ##
    # Gzip Settings
    ##

    gzip on;
    gzip_disable "msie6";

    # gzip_vary on;
    # gzip_proxied any;
    # gzip_comp_level 6;
    # gzip_buffers 16 8k;
    # gzip_http_version 1.1;
    # gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    ##
    # load conf dir
    ##
    
    include /etc/nginx/conf.d/*.conf;

    ##
    # rate limit
    ##

    limit_req_zone $binary_remote_addr zone=api:5m rate=2r/s;

    ##
    # Virtual Host Configs
    ##
    include /etc/nginx/sites-enabled/*;
}
