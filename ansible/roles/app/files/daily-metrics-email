#!/bin/sh
set -e

logrotate -f /etc/logrotate.d/nginx
bundle=/home/littlesis/.rbenv/shims/bundle
export RAILS_ENV=production
cd /var/www/littlesis
runuser --whitelist-environment=RAILS_ENV -u littlesis -- $bundle exec rails runner "SystemMailer.metrics_email.deliver_now"
runuser --whitelist-environment=RAILS_ENV -u littlesis -- $bundle exec rails runner "WebRequest.nullify_identifying_data"
