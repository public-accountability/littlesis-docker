/var/log/nginx/*.log {
    daily
    rotate 7
    compress
    delaycompress
    notifempty
    create 0640 www-data adm
    prerotate
        /home/maintainer/scripts/rails-bundle exec rails runner ./lib/scripts/logrotate $1
    endscript
    postrotate
	kill -USR1 `cat /run/nginx.pid`
    endscript
}