/var/log/nginx/*.log {
    daily
    rotate 7
    compress
    delaycompress
    notifempty
    create 0640 www-data adm
    prerotate
        sudo -i --user=littlesis bash -l -c "export RAILS_ENV=production; cd /var/www/littlesis && bundle exec rails runner ./lib/scripts/logrotate $1"
    endscript
    shred
    postrotate
	kill -USR1 `cat /run/nginx.pid`
    endscript
}