upstream wordpress_php {
    server unix:{{ wordpress_fpm_socket }};
}

# redirect requests without tls 

server {
    listen 80;
    server_name {{ news_server_name }} blog.littlesis.org;
    return 301 https://$host$request_uri;
}

server {
    listen 80;
    server_name {{ pai_server_name }};
    return 301 https://$host$request_uri;
}


# redirect blog.littlesis.org to news.littlesis.org
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_certificate         /etc/nginx/certs/news_certificate.pem;
    ssl_certificate_key     /etc/nginx/certs/news_key.pem;
    server_name blog.littlesis.org;
    return 301 https://{{news_server_name }}$request_uri;
}


# news.littlesis.org server #

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_certificate         /etc/nginx/certs/news_certificate.pem;
    ssl_certificate_key     /etc/nginx/certs/news_key.pem;
    server_name {{ news_server_name }};
    include /etc/nginx/wordpress_server.conf;
}

# public-accountability server #

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_certificate         /etc/nginx/certs/pai_certificate.pem;
    ssl_certificate_key     /etc/nginx/certs/pai_key.pem;
    server_name {{ pai_server_name }};
    include /etc/nginx/wordpress_server.conf;
}
